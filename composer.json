{
    "name": "leafs/api",
    "description": "A lightweight PHP MVC framework for rapid API development.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "framework",
        "leaf",
        "leafPHP",
        "mvc",
        "leaf api",
        "api"
    ],
    "authors": [
        {
            "name": "Michael Darko",
            "email": "mickdd22@gmail.com",
            "homepage": "https://mychi.netlify.app",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.2",
        "illuminate/console": "^8.75",
        "leafs/aloe": "dev-master",
        "leafs/auth": "*",
        "leafs/blade": "*",
        "leafs/cors": "*",
        "leafs/db": "*",
        "leafs/leaf": "^3.3",
        "leafs/logger": "*",
        "leafs/mvc-core": "dev-main"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2",
        "fakerphp/faker": "^1.16"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Channels\\": "app/channels/",
            "App\\Components\\": "app/components/",
            "App\\Console\\": "app/console/",
            "App\\Controllers\\": "app/controllers/",
            "App\\Database\\Factories\\": "app/database/factories/",
            "App\\Database\\Schema\\": "app/database/schema/",
            "App\\Database\\Seeds\\": "app/database/seeds/",
            "App\\Events\\": "app/events/",
            "App\\Helpers\\": "app/helpers/",
            "App\\Http\\": "app/http/",
            "App\\Jobs\\": "app/jobs/",
            "App\\Lang\\": "app/lang/",
            "App\\Mail\\": "app/mail/",
            "App\\Middleware\\": "app/middleware/",
            "App\\Models\\": "app/models/",
            "App\\Notifications\\": "app/notifications/",
            "App\\Scripts\\": "app/scripts/",
            "App\\Services\\": "app/services/",
            "App\\Utils\\": "app/utils/",
            "App\\Views\\": "app/views/",
            "App\\Workers\\": "app/workers/",
            "Config\\": "config/",
            "Lib\\": "lib/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "sort-packages": false
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"unlink('README.MD'); rename('README2.MD', 'README.MD');\""
        ],
        "post-create-project-cmd": [
            "@php leaf key:generate"
        ]
    }
}
